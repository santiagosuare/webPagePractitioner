<div class="mt-5">
  <div class="py-2">
    <table class="table table-bordered">
      <thead class="bg-primary text-white">
        <tr>
          <th scope="col">IdÂ°</th>
          <th scope="col">Nombre</th>
          <th scope="col">Precio</th>
          <th scope="col">Imagen</th>
        </tr>
      </thead>
      <tbody>
        {{#if products}}
          {{#each products }}
          <tr>
            <th style="width: 10%" class="text-brown">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>${{this.price}}</td>
            <td><img src="{{this.url}}" alt="{{this.name}}" height="100" width="100"></td>
          </tr>
          {{/each}}
        {{else}}
          <tr>
            <td colspan="4" class="text-center p-20">
              <p class="mb-8">No hay productos para mostrar</p>
            </td>
          </tr>
        {{/if}}
      </tbody>
    </table>
  </div>
</div>